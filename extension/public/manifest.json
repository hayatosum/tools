{
    "manifest_version": 3,
    "name": "PokePast Extension",
    "version": "1.0.0",
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "host_permissions": ["https://pokepast.es/*", "https://*.firebaseapp.com/*", "https://*.googleapis.com/*", "https://accounts.google.com/*"],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "permissions": ["activeTab", "tabs", "storage", "identity"]
}
